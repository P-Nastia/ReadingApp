<Window x:Class="ApplicationUI.Windows.CommentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUI.Windows"
        mc:Ignorable="d"
        Title="Comments" MinHeight="450" MinWidth="450"  MaxHeight="450" MaxWidth="450" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.15*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.ColumnSpan="2" Grid.Row="0" ItemsSource="{Binding UserCommentCollection}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" MouseDoubleClick="DeleteComment">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Orientation="Horizontal">

                        <Image x:Name="Icon" Width="50" Height="50" Loaded="SetImageSource" />

                        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding User.Nickname}" FontWeight="Bold" />

                        <TextBlock VerticalAlignment="Center" Text="{Binding Comment}" />

                        <TextBlock VerticalAlignment="Center" Text="{Binding Published, StringFormat=' {0:MM/dd/yyyy HH:mm}'}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="commentTB" Margin="20,10,0,10" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>
        <Image Grid.Row="1" Grid.Column="1" Margin="10" Source="D:\VisualStudioProjects\Network_programming\ReadingApp\ApplicationUI\Images\addComment.png" Cursor="Hand" MouseLeftButtonUp="SendComment"></Image>
    </Grid>
    
</Window>
