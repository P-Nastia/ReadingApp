<Window x:Class="ApplicationUI.Windows.ReadBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUI.Windows"
        mc:Ignorable="d"
        Title="Read Book"  MinHeight="800" MinWidth="1300"  MaxHeight="800" MaxWidth="1300" WindowStartupLocation="CenterScreen" PreviewMouseWheel="Window_PreviewMouseWheel">
    <ListBox Padding="5" x:Name="paragraphsLB" FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Visible" MouseDoubleClick="textRB_MouseDoubleClick"
             ItemsSource="{Binding Book.Paragraphs}" 
             DisplayMemberPath="DisplayText">
    </ListBox>
</Window>
