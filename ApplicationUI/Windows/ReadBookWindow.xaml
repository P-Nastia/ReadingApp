<Window x:Class="ApplicationUI.Windows.ReadBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUI.Windows"
        mc:Ignorable="d"
        Title="ReadBookWindow" Height="800" Width="1300" WindowStartupLocation="CenterScreen">
    <ListBox x:Name="textRB" FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Visible" 
             ItemsSource="{Binding Book.Paragraphs}" 
             DisplayMemberPath="DisplayText">
    </ListBox>
</Window>
